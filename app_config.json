{
  "description": "A extended example app that shows how to use MentraOS.",
  "permissions": [
    {
      "type": "MICROPHONE",
      "description": "To show transcriptions"
    }
  ],
  "settings": [
    {
      "type": "toggle",
      "key": "show_live_transcription",
      "label": "Show live transcription",
      "defaultValue": true
    }
  ],
  "tools": [
    {
      "id": "emulate_input",
      "description": "Simulate voice input for testing the storage engine.",
      "activationPhrases": [
        "simulate input",
        "test input"
      ],
      "parameters": {
        "text": {
          "type": "string",
          "description": "The text to simulate as input"
        }
      }
    }
  ]
}